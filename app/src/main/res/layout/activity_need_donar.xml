<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_beg">

   <android.support.constraint.ConstraintLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"

    tools:context="com.example.android.bloodbank20.NeedDonar">
       <Button
           android:layout_width="150dp"
           android:layout_height="wrap_content"
           android:text="Update your password"
           android:onClick="update"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintRight_toRightOf="parent"
           android:layout_marginTop="25dp"
           app:layout_constraintTop_toBottomOf="@+id/a2bpositive" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select the Required Group"
        android:textColor="#e74848"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="63dp"
        android:id="@+id/textView2" />

    <Button
        android:id="@+id/opositive"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="opositive"
        android:onClick="opositivegroup"
        android:background="@drawable/my_beg"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="37dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/apositive"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="apositive"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="37dp"
        android:onClick="apositivegroup"
        android:background="@drawable/my_beg"
        app:layout_constraintTop_toBottomOf="@+id/opositive" />

    <Button
        android:id="@+id/onegative"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="o negative"
        android:layout_marginRight="8dp"
        android:background="@drawable/my_beg"
        android:onClick="onegativegroup"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="37dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/anegative"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:text="a negative"
        android:onClick="anegativegroup"
        android:background="@drawable/my_beg"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="37dp"
        app:layout_constraintTop_toBottomOf="@+id/onegative" />

    <Button
        android:id="@+id/bpositive"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="b positive"
        android:onClick="bpositivegroup"
        android:background="@drawable/my_beg"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="37dp"
        app:layout_constraintTop_toBottomOf="@+id/apositive" />

    <Button
        android:id="@+id/bnegative"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="b negative"
        android:onClick="bnegativegroup"
        android:layout_marginRight="8dp"
        android:background="@drawable/my_beg"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="34dp"
        app:layout_constraintTop_toBottomOf="@+id/anegative" />

    <Button
        android:id="@+id/abpositive"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="ab positive"
        android:onClick="abpositivegroup"
        android:background="@drawable/my_beg"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="37dp"
        app:layout_constraintTop_toBottomOf="@+id/bpositive" />

    <Button
        android:id="@+id/abnegative"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:text="ab negative"
        android:onClick="abnegativegroup"
        android:background="@drawable/my_beg"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="37dp"
        app:layout_constraintTop_toBottomOf="@+id/bnegative" />

    <Button
        android:id="@+id/a1bpositive"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="37dp"
        android:text="a1 b positive"
        android:onClick="aonepositive"
        android:background="@drawable/my_beg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/abpositive" />

    <Button
        android:id="@+id/a2bpositive"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="37dp"
        android:text="a2 b positive"
        android:onClick="atwopositive"
        android:background="@drawable/my_beg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/abnegative" />



</android.support.constraint.ConstraintLayout>
</ScrollView>